#User name
name = input("Before we start, what is your name fellow contestant? ")
print()
print("I see {}, let us begin".format(name))
score = 0
value_score = "9"
scores = 9
print()

#Question 1
question1 = input("Which of the following is incorrect?: \na.Print(apple) \nb.happy.pop(1) \nc.print(card[5:]) \nQ1.=")
if question1 == "a" or question1 == "A":
    print("You are correct!")
    score += 1
    print("You got " + str(score) + "/"  + value_score + " correct")
else:
    print()
    print("Incorrect, you lose")
    print()
    print("The Answer Is: a.Print(apple)")
    print()
    score -= 1
    print("You got " + str(score) + "/"  + value_score + " correct")
    print("Your final score is {}".format(score))
    print("Your percentage: ")
    print((score / scores ) * 100)
    exit()
print()

